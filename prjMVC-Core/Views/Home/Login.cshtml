
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>帳號</h4>


        <div class="form-group">

            <div class="col-md-10">
                @Html.TextBox("txtAccount", "joseph@gmail.com", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.TextBox("txtPassword", "1234", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("取消", "List")
                <input type="submit" value="登入" class="btn btn-default" />
            </div>
        </div>
    </div>
}

