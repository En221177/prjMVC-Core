<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prjMVC_Core</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prjMVC_Core.styles.css" asp-append-version="true" />
    <link href="~/css/chat.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">prjMVC_Core</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="chat" style="background: rgb(191, 169, 154); width: 60px; height: 60px; border-radius: 50px 50px 0 50px; position: absolute; right: 15px; bottom: 15px; display: flex">
        <div id="left-eye" class="left-eye"></div>
        <div id="mouth" class="mouth"></div>
        <div id="right-eye" class="right-eye"></div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - prjMVC_Core - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
    <script>
        $("#chat").hover(function () {
            $("#left-eye").css({ 
                "top": "30%" ,
                "left": "25% "
            });
            $("#right-eye").css({
                "top": "30%",
                "right": "25% "
            });
            $("#mouth").css({
                   "left": "15 px" ,
                    "width": "20px",
                    "height": "20px",
                "border-radius": "0 50px 50px 0"
                });
            //console.log("in");
        },
            function () {
                $("#left-eye").css("background", "white")
                $("#left-eye").css({
                    "top": "45%",
                    "left": "19% "
                });
                $("#right-eye").css({
                    "top": "45%",
                    "right": "19% "
                });
                $("#mouth").css({
                    "left": "45 %",
                    "width": "6px",
                    "height": "6px"
                });
                //console.log("out");
            })


    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
